<%- include('../_layouts/adminheader'); %>
<div class="container" style="height: 75vh">
  <h2 class="page-title">Edit Page</h2>
  <a href="/admin/pages" class="btn btn-primary">Back to all pages</a>
  <form method="POST" action="/admin/pages/edit-page/<%= id %>">
    <div class="form-group">
      <label for="">Title</label>
      <input
        type="text"
        class="form-control"
        name="title"
        value="<%=title %>"
        placeholder="title..."
      />
    </div>
    <div class="form-group">
      <label for="">Slug</label>
      <input
        type="text"
        class="form-control"
        name="slug"
        value="<%=slug %>"
        placeholder="Slug..."
      />
    </div>
    <div class="form-group">
      <label for="">Content</label>
      <textarea
        name="content"
        placeholder="content..."
        class="form-control"
        id="ta"
        cols="30"
        rows="10"
      >
<%= content %></textarea
      >
    </div>

    <button class="btn btn btn-success">Submit</button>
  </form>
</div>
<%- include('../_layouts/adminfooter'); %>
